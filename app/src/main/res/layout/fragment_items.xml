<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ItemsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/fragLocationTextView"
        android:layout_width="350dp"
        android:layout_height="172dp"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        android:text="location"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fragNameTextView"
        android:layout_width="350dp"
        android:layout_height="172dp"
        android:layout_gravity="center"
        android:gravity="top"
        android:text="name"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fragDateTextView"
        android:layout_width="350dp"
        android:layout_height="138dp"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        android:text="date"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fragPhoneTextView"
        android:layout_width="350dp"
        android:layout_height="138dp"
        android:layout_gravity="center"
        android:gravity="top"
        android:text="phone"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fragDescriptionTextView"
        android:layout_width="350dp"
        android:layout_height="108dp"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        android:text="item"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fragPostTypeTextView"
        android:layout_width="350dp"
        android:layout_height="87dp"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        android:text="post"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fragRemoveButton"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|center"
        android:backgroundTint="#9F9F9F"
        android:text="REMOVE"
        android:textColor="#000000"
        android:textStyle="bold" />

</FrameLayout>